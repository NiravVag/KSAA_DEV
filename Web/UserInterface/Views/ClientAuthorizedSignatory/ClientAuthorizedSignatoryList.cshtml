@model IEnumerable<KSAA.ClientRegister.Application.DTOs.ClientRegister.ListDTOs.ClientAuthorizedSignatoryListModel>

<!-- Row -->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div>
            <a href="~/ClientAuthorizedSignatory/ClientAuthorizedSignatoryAdd" class="btn btn-primary  mr-10" style="width: 140px; margin-top: 10px; float: right;margin-bottom: 10px;">ADD</a>
        </div>
    </div>
</div>
<!-- Row -->

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <h6 class="txt-dark capitalize-font">List of Details Authorized Signatory</h6>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div>
                                @*<div class="panel-heading">
                                    <div class="pull-left"></div>
                                    <div class="clearfix"></div>
                                </div>*@
                                <div class="panel-wrapper collapse in">
                                    <div>
                                        <div class="table-wrap">
                                            <div class="table-responsive">
                                                <table id="datable_1" class="table table-hover display pb-30" style="white-space: nowrap;">
                                                    <thead>
                                                        <tr style="text-align:center;">
                                                            <th hidden>Id</th>
                                                            <th>First Name</th>
                                                            <th>Middle Name</th>
                                                            <th>Last Name</th>
                                                            <th>Father First Name</th>
                                                            <th>Father Middle Name</th>
                                                            <th>Father Last Name</th>
                                                            <th>Date Of Brith</th>
                                                            <th>Gender</th>
                                                            <th>Designation/Status</th>
                                                            <th>Mobile</th>
                                                            <th>Indian</th>
                                                            <th>PhoneNo STD</th>
                                                            <th>Email</th>
                                                            <th>Address</th>
                                                            <th>PAN</th>
                                                            <th>DIN</th>
                                                            <th style="text-align:center">Photo</th>
                                                            @*<th>IP</th>
                                                            <th>BrowserCase</th>*@
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr style="text-align:center">
                                                            <td hidden>
                                                                @Html.DisplayFor(modelItem => item.Id)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.FirstName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.MiddleName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.LastName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.FatherFirstName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.FatherMiddleName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.FatherLastName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.BOD)
                                                                @*@item.BOD.ToString("dd-MM-yyyy")*@
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Gender)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.DesignationStatus)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Mobile)
                                                            </td>
                                                            <td>
                                                                @* @Html.DisplayFor(modelItem => item.Indian)*@
                                                                @if (item.Indian == true)
                                                                {
                                                                    <p>Yes</p>
                                                                }
                                                                else
                                                                {
                                                                    <p>No</p>
                                                                }
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.PhoneNoSTD)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Email)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Address)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.PAN)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.DIN)
                                                            </td>
                                                            <td>
                                                                @item.Photo
                                                            </td>
                                                            @*<td>
                                                        @Html.DisplayFor(modelItem => item.IP)
                                                        </td>
                                                        <td>
                                                        @Html.DisplayFor(modelItem => item.BrowserCase)
                                                        </td>*@
                                                            <td class="text-nowrap">
                                                                <a asp-route-id="@item.Id" asp-controller="ClientAuthorizedSignatory" asp-action="GetClientAuthorizedSignatory" class="mr-25" data-toggle="tooltip" data-original-title="Edit"> <i class="fa fa-pencil text-inverse m-r-10"></i> </a>
                                                                <a asp-route-id="@item.Id" asp-controller="ClientAuthorizedSignatory" asp-action="DeleteClientAuthorizedSignatory" data-toggle="tooltip" data-original-title="Delete"> <i class="fa fa-close text-danger"></i> </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                    <tbody>
                                                    </tbody>

                                                    <tfoot>
                                                        <tr>
                                                            <th hidden>Id</th>
                                                            <th>First Name</th>
                                                            <th>Middle Name</th>
                                                            <th>Last Name</th>
                                                            <th>Father First Name</th>
                                                            <th>Father Middle Name</th>
                                                            <th>Father Last Name</th>
                                                            <th>Date Of Brith</th>
                                                            <th>Gender</th>
                                                            <th>Designation/Status</th>
                                                            <th>Mobile</th>
                                                            <th>Indian</th>
                                                            <th>PhoneNo STD</th>
                                                            <th>Email</th>
                                                            <th>Address</th>
                                                            <th>PAN</th>
                                                            <th>DIN</th>
                                                            <th style="text-align:center">Photo</th>
                                                            @*<th>IP</th>
                                                            <th>BrowserCase</th>*@
                                                            <th>Action</th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Row -->

<script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
        //debugger;
        //$('#datable_1').DataTable({
        //    "lengthChange": false,
        //    "order": [[0, "desc"]]
        //});

        $("#divLoader").show();
        setTimeout(function() {
            $('#datable_1').DataTable({
                "lengthChange": false,
                "order": [[0, "desc"]]
            });
            $("#divLoader").hide();
        }, 5000);
    });
</script>