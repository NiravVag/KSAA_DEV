@section Scripts{

    <script type="text/javascript">
        $(document).ready(function() {
            $('#frmdetailsOfAuthorizedSignatoryedit').validator().on('submit', function(e) {
                if (e.isDefaultPrevented()) {
                    // handle the invalid form...
                }
                else {
                    var obj = {
                        Id: @Model.Id,
                        FirstName: $("#FirstName").val(),
                        MiddleName: $("#MiddleName").val(),
                        LastName: $("#LastName").val(),
                        FatherFirstName: $("#FatherFirstName").val(),
                        FatherMiddleName: $("#FatherMiddleName").val(),
                        FatherLastName: $("#FatherLastName").val(),
                        BOD: $("#DOB").val(),
                        Gender: $("#Gender").val(),
                        DesignationStatus: $("#Designation").val(),
                        Mobile: $("#Contact").val(),
                        PhoneNoSTD: $("#TContact").val(),
                        Email: $("#Email").val(),
                        Address: $("#ResidentialAddress").val(),
                        PAN: $("#PAN").val(),
                        DIN: $("#DIN").val(),
                        Indian: $("#indian").is(':checked'),
                        //Photo: $("#ProofofAppointmentofAuthorizedSignatory").val()
                    };
                    $("#divLoader").show();
                    e.preventDefault();
                    $.ajax({
                        url: '/ClientAuthorizedSignatory/ClientAuthorizedSignatoryEdit',
                        method: 'POST',
                        data: obj,
                        success: function(data) {
                            $("#divLoader").hide();
                            $.toast({
                                text: "Client Authorized Signatory Update SuccessFully",
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'success',
                                hideAfter: 3500,
                                stack: 6,
                            })
                            setTimeout(function() {
                                window.location.href = "/ClientAuthorizedSignatory/ClientAuthorizedSignatoryList"
                            }, 1500);
                        },
                        error: function(jqXHR, textStatus, error) {
                            $("#divLoader").hide();
                            $.toast({
                                text: jqXHR.responseJSON.message,
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'error',
                                hideAfter: 3500,
                                stack: 6
                            });
                        }
                    });
                }
            });
        });

    </script>
    }