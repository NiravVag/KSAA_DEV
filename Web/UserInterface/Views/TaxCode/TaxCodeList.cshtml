@model IEnumerable<KSAA.Master.Application.DTOs.Master.ListDTOs.TaxCodeListModel>

<!-- Row -->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div>
            <a href="~/TaxCode/TaxCodeAdd" class="btn btn-primary  mr-10" style="width: 140px; margin-top: 10px; float: right;margin-bottom: 10px;">ADD</a>
        </div>
    </div>
</div>
<!-- Row -->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <h6 class="txt-dark capitalize-font">List of Tax Code</h6>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div>
                                @*<div class="panel-heading">
                                    <div class="pull-left"></div>
                                    <div class="clearfix"></div>
                                </div>*@
                                <div class="panel-wrapper collapse in">
                                    <div>
                                        <div class="table-wrap">
                                            <div class="table-responsive">
                                                <table id="datable_1" class="table table-hover display pb-30">
                                                    <thead>
                                                        <tr>
                                                            <th hidden>Id</th>
                                                            <th>Tax_Code</th>
                                                            <th>SubtaxName</th>
                                                            <th>TaxRate</th>
                                                            <th>Type</th>
                                                            @*<th>IP</th>
                                                            <th>BrowserCase</th>*@
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td hidden>
                                                                @Html.DisplayFor(modelItem => item.Id)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Tax_Code)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.SubtaxName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.TaxRate)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Type)
                                                            </td>
                                                            @*<td>
                                                        @Html.DisplayFor(modelItem => item.IP)
                                                        </td>
                                                        <td>
                                                        @Html.DisplayFor(modelItem => item.BrowserCase)
                                                        </td>*@
                                                            <td class="text-nowrap">
                                                                <a asp-route-id="@item.Id" asp-controller="TaxCode" asp-action="GetTaxCode" class="mr-25" data-toggle="tooltip" data-original-title="Edit"> <i class="fa fa-pencil text-inverse m-r-10"></i> </a>
                                                                <a asp-route-id="@item.Id" asp-controller="TaxCode" asp-action="DeleteTaxCodes" data-toggle="tooltip" data-original-title="Delete"> <i class="fa fa-close text-danger"></i> </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                    <tbody>
                                                    </tbody>

                                                    <tfoot>
                                                        <tr>
                                                            <th hidden>Id</th>
                                                            <th>Tax_Code</th>
                                                            <th>SubtaxName</th>
                                                            <th>TaxRate</th>
                                                            <th>Type</th>
                                                            @*<th>IP</th>
                                                            <th>BrowserCase</th>*@
                                                            <th>Action</th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Row -->

<script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {

        //$('#datable_1').DataTable({
        //    "lengthChange": false,
        //    "order": [[0, "desc"]]
        //});

        $("#divLoader").show();
        setTimeout(function() {
            $('#datable_1').DataTable({
                "lengthChange": false,
                "order": [[0, "desc"]]
            });
            $("#divLoader").hide();
        }, 5000);
    });
</script>