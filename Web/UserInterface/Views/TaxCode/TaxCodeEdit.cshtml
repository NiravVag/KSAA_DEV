                                <div class="input-group-addon"><i class="ti-user"></i></div>
                                <input class="form-control" data-required-error="BrowserCase is required" id="BrowserCase" required asp-for="BrowserCase">
                                </div>
                                <div class="help-block with-errors"></div>
                                </div>
                                </div>
                                </div>
                                </div>*@
                                <!-- /Row -->
                                <div class="form-actions mt-10">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="col-md-offset-3 col-md-9">
                                                    <button type="submit"
                                                            class="btn btn-primary  mr-10">
                                                        Submit
                                                    </button>
                                                    <a href="~/TaxCode/TaxCodeList" class="btn btn-warning" id="btnCancel">Cancel</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6"> </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function() {
            $('#frmTaxCodeEdit').validator().on('submit', function(e) {
                if (e.isDefaultPrevented()) {
                    // handle the invalid form...
                }
                else {

                    var obj = {
                        Id: @Model.Id,
                        Tax_Code: $("#Tax_Code").val(),
                        SubtaxName: $("#SubtaxName").val(),
                        TaxRate: $("#TaxRate").val(),
                        Type: $("#Type").val(),
                        Ip: $("#Ip").val(),
                        BrowserCase: $("#BrowserCase").val()
                    };

                    $("#divLoader").show();
                    e.preventDefault();
                    $.ajax({
                        url: '/TaxCode/TaxCodeEdits',
                        method: 'POST',
                        data: obj,
                        success: function(data) {
                            $("#divLoader").hide();
                            $.toast({
                                text: "Tax Code Update SuccessFully",
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'success',
                                hideAfter: 3500,
                                stack: 6,

                            })
                            setTimeout(function() {
                                window.location.href = "/TaxCode/TaxCodeList"
                            }, 1500);
                        },
                        error: function(jqXHR, textStatus, error) {
                            $("#divLoader").hide();
                            $.toast({
                                text: jqXHR.responseJSON.message,
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'error',
                                hideAfter: 3500,
                                stack: 6
                            });
                            //setTimeout(function () {

                            //}, 1500);
                        }
                    });
                }
            });
        });

    </script>
}