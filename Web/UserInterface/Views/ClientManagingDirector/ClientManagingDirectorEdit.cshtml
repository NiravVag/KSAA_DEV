@model KSAA.ClientRegister.Application.DTOs.ClientRegister.ClientManagingDirectorViewModel
@using KSAA.Domain.Common;

<style>
	#divLoader {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0.7;
  background-color: #fff;
  z-index: 99;
}
</style>
<!-- Row -->
<div id="divLoader" style="display:none;"> <img src="~/images/ajax-loader.gif" alt="Loader" /></div>
<!-- Row -->

<!-- Row -->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div>
            <a href="~/ClientManagingDirector/ClientManagingDirectorList" class="btn btn-primary  mr-10" style="width: 140px; margin-top: 10px; float: right;margin-bottom: 10px;">LIST</a>
        </div>
    </div>
</div>
<!-- Row -->

<div class="row">
    <div class="panel panel-default card-view">
        <div class="panel-heading">
            <h6 class="txt-dark capitalize-font">Update Managing/Whole Time Directors</h6>
            <div class="clearfix"></div>
        </div>
        <div class="panel-wrapper collapse in">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-wrap">
                            <form class="form-horizontal" data-toggle="validator" role="form" method="post" id="frmClientManagingDirector" name="frmClientManagingDirector">
                                <!--/Row-->
                                @Html.HiddenFor(x=>x.Id)
                                <div class="form-body">
                                    <!--/Row-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="control-label col-md-3"></div>
                                                <div class="col-md-9">
                                                    <label>Name</label>
                                                    <input class="form-control" data-required-error="Name required" id="Name" value="@Model.Name" required>
                                                    <div class="help-block with-errors"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="col-md-9">
                                                        <label>Father Name</label>
                                                        <input class="form-control" data-required-error="Father Name is required" value="@Model.FatherName" id="FatherName" required>
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/Row-->
                                </div>
                                <!--/Row-->
                                <div class="form-body">
                                    <!--/Row-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="control-label col-md-3"></div>
                                                <div class="col-md-9">
                                                    <label>Date of Birth</label>
                                                    <input class="form-control" data-mask="99/99/9999" data-required-error="Date of Birth required" value="@Model.BOD.ToString(DateTimeFormat.StandardDateTime)" id="DOB" required>
                                                    <div class="help-block with-errors"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="col-md-9">
                                                        <label>Designation/Status</label>
                                                        <input class="form-control" data-required-error="Designation/Status is required" id="Designation" value="@Model.DesignationStatus" required>
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/Row-->
                                </div>

                                <div class="form-body">
                                    <!--/Row-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="control-label col-md-3"></div>
                                                <div class="col-md-9">
                                                    <label>Mobile Number</label>
                                                    <input class="form-control" data-required-error="Mobile Number required" id="Contact" value="@Model.MobileNumber" required>
                                                    <div class="help-block with-errors"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="col-md-9">
                                                        <label>Telephone Number</label>
                                                        <input class="form-control" data-required-error="Telephone No with STD is required" id="tContact" value="@Model.PhoneNoSTD" required>
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/Row-->
                                </div>

                                <div class="form-body">
                                    <!--/Row-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="control-label col-md-3"></div>
                                                <div class="col-md-9">
                                                    <label>Email</label>
                                                    <input class="form-control" data-required-error="Email required" id="Email" value="@Model.Email" required>
                                                    <div class="help-block with-errors"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="col-md-9">
                                                        <label>Address</label>
                                                        <input class="form-control" data-required-error="Residential Address is required" id="Address" value="@Model.Address" required>
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/Row-->
                                </div>

                                <div class="form-body">
                                    <!--/Row-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="control-label col-md-3"></div>
                                                <div class="col-md-9">
                                                    <label>PAN Number</label>
                                                    <input class="form-control" data-required-error="PAN required" id="PAN" value="@Model.PAN" required>
                                                    <div class="help-block with-errors"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="col-md-9">
                                                        <label>DIN</label>
                                                        <input class="form-control" data-required-error="DIN is required" value="@Model.DIN" id="DIN" required>
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/Row-->
                                </div>

                                <!--/Row-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="control-label col-md-3"></div>
                                            <div class="col-md-9">
                                                <label class="control-label mb-10">Whether citizen of India?</label>
                                                <div class="radio-list">
                                                    <div class="radio-inline pl-0">
                                                        <span class="radio radio-info">
                                                            <input type="radio" name="Indian" id="indian" value="true" asp-for="@Model.Indian">
                                                            <label>Yes</label>
                                                        </span>
                                                    </div>
                                                    <div class="radio-inline">
                                                        <span class="radio radio-info">
                                                            <input type="radio" name="Indian" value="false">
                                                            <label>No</label>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <!--/Row-->

                                <div class="form-actions mt-10">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="col-md-offset-3 col-md-9">
                                                    <button type="submit"
                                                            class="btn btn-primary  mr-10">
                                                        Submit
                                                    </button>
                                                    <a href="~/ClientManagingDirector/ClientManagingDirectorList"
                                                       class="btn btn-warning">
                                                        Cancel
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6"> </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{


    <script type="text/javascript">
        $(document).ready(function() {
            $('#frmClientManagingDirector').validator().on('submit', function(e) {
                if (e.isDefaultPrevented()) {
                    // handle the invalid form...
                }
                else {
                    var obj = {
                        Id: @Model.Id,
                        Name: $("#Name").val(),
                        FatherName: $("#FatherName").val(),
                        BOD: $("#DOB").val(),
                        DesignationStatus: $("#Designation").val(),
                        MobileNumber: $("#Contact").val(),
                        PhoneNoSTD: $("#tContact").val(),
                        Email: $("#Email").val(),
                        Address: $("#Address").val(),
                        PAN: $("#PAN").val(),
                        DIN: $("#DIN").val(),
                        Indian: $("#indian").is(':checked'),
                        //Photo: $("#Photo").val()
                    };
                    $("#divLoader").show();
                    e.preventDefault();
                    $.ajax({
                        url: '/ClientManagingDirector/ClientManagingDirectorEdit',
                        method: 'POST',
                        data: obj,
                        success: function(data) {
                            $("#divLoader").hide();
                            $.toast({
                                text: "Client Managing Director Update SuccessFully",
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'success',
                                hideAfter: 3500,
                                stack: 6,
                            })
                            setTimeout(function() {
                                window.location.href = "/ClientManagingDirector/ClientManagingDirectorList"
                            }, 1500);
                        },
                        error: function(jqXHR, textStatus, error) {
                            $("#divLoader").hide();
                            $.toast({
                                text: jqXHR.responseJSON.message,
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'error',
                                hideAfter: 3500,
                                stack: 6
                            });
                        }
                    });
                }
            });
        });

    </script>
    }