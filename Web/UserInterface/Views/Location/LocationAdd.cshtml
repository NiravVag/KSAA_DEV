@section Scripts{


    <script type="text/javascript">
        $(document).ready(function() {
            $('#frmLocationAdd').validator().on('submit', function(e) {
                if (e.isDefaultPrevented()) {
                    // handle the invalid form...
                }
                else {
                    var obj = {
                        Location_Code: $("#Location_Code").val(),
                        Address: $("#Address").val(),
                        Location: $("#Location").val(),
                        GSTRegistrationNo: $("#GSTRegistrationNo").val(),
                        TypeOfServicesProvided: $("#TypeOfServicesProvided").val(),
                        TypeOfUnit: $("#TypeOfUnit").val(),
                        ProductsManufactured: $("#ProductsManufactured").val(),
                        ProductsTraded: $("#ProductsTraded").val(),
                        Ip: $("#Ip").val(),
                        BrowserCase: $("#BrowserCase").val()
                    };
                    $("#divLoader").show();
                    e.preventDefault();
                    $.ajax({
                        url: '/Location/LocationAdd',
                        method: 'POST',
                        data: obj,
                        success: function(data) {
                            $("#divLoader").hide();
                            $.toast({
                                text: data,
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'success',
                                hideAfter: 3500,
                                stack: 6,
                            })
                            setTimeout(function() {
                                window.location.href = "/Location/LocationList"
                            }, 1500);
                        },
                        error: function(jqXHR, textStatus, error) {
                            $("#divLoader").hide();
                            $.toast({
                                text: jqXHR.responseJSON.message,
                                position: 'top-right',
                                loaderBg: '#f8b32d',
                                icon: 'error',
                                hideAfter: 3500,
                                stack: 6
                            });
                        }
                    });
                }
            });
        });

    </script>
    }