                                                                <td>@data.ReceiptNumber</td>
                                                                <td>@data.DateofReceipt</td>
                                                                <td>@data.GSTIN</td>
                                                                <td>@data.POS</td>
                                                                <td>@data.TypeOfSupply</td>
                                                                <td>@data.TaxableValue</td>
                                                                <td>@data.TotalAmendmentTaxableValue</td>
                                                                <td>@data.Rate</td>
                                                                <td>@data.CessPercentage </td>
                                                                <td>@data.CGST</td>
                                                                <td>@data.SGST</td>
                                                                <td>@data.IGST</td>
                                                                <td>@data.Cess</td>
                                                                <td>@data.TotalTax</td>
                                                                <td>@data.TotalInvoiceValue</td>
